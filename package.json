{
  "name": "@equinor/fusion-react-components",
  "version": "1.1.0",
  "description": "collection of fusion components",
  "main": "index.js",
  "scripts": {
    "start": "npm run storybook",
    "install": "npm run bootstrap",
    "bootstrap": "lerna bootstrap -- --legacy-peer-deps",
    "test": "lerna run test",
    "test:build": "docker build -t test -f build.Dockerfile .",
    "lint": "eslint packages/**/src/**/*.{ts,tsx}",
    "build": "lerna run build --ignore '@equinor/fusion-react-components-stories'",
    "lint:report": "eslint --output-file eslint-report.log.json --format json ./packages/*/src/**",
    "storybook": "npm run start --prefix storybook",
    "storybook:build": "npm run build --prefix storybook",
    "npm:clean": "rm -rf node_modules && lerna exec 'rm -rf node_modules'",
    "lerna:update": "lernaupdate",
    "lerna:dedupe": "lernaupdate --dedupe",
    "ncu": "lerna exec 'npx npm-check-updates \"/fusion-wc.*/\" -u'",
    "postncu": "npm run bootstrap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-react-components.git"
  },
  "keywords": [
    "react",
    "fusion",
    "components"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/equinor/fusion-react-components/issues"
  },
  "homepage": "https://github.com/equinor/fusion-react-components#readme",
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@equinor/eslint-config-fusion": "^1.0.0",
    "@types/react": "^17.0.33",
    "eslint": "^8.8.0",
    "husky": "^8.0.1",
    "lerna": "^5.1.6",
    "lerna-update-wizard": "^1.1.0",
    "lint-staged": "^12.1.5",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "./packages/**/src/**/*.{ts,tsx}": [
      "eslint --quiet --fix"
    ]
  },
  "dependencies": {
    "@equinor/fusion-react-icon": "^0.2.11",
    "@equinor/fusion-react-styles": "^0.5.4",
    "@equinor/fusion-react-tooltip": "^1.1.4"
  }
}
