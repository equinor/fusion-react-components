{
  "name": "@equinor/fusion-react-components",
  "version": "1.1.0",
  "description": "collection of fusion components",
  "main": "index.js",
  "scripts": {
    "test": "lerna run --no-bail test",
    "start": "pnpm run storybook",
    "build": "lerna run build --ignore '@equinor/fusion-react-components-stories'",
    "test:build": "docker build -t test -f build.Dockerfile .",
    "lint": "eslint packages/**/src/**/*.{ts,tsx}",
    "lint:fix": "eslint packages/**/src/**/*.{ts,tsx} --fix",
    "lint:report": "eslint --format json --output-file ./eslint-report.log.json --ext .js,.jsx,.ts,.tsx packages/**/src/**/*.{ts,tsx}",
    "storybook": "pnpm run --dir ./storybook start",
    "storybook:build": "pnpm run --dir ./storybook build",
    "clean": "rm -rf node_modules && rm -rf pnpm-lock.yaml && lerna clean -y",
    "lerna:update": "lernaupdate",
    "lerna:dedupe": "lernaupdate --dedupe",
    "ncu": "lerna exec 'npx npm-check-updates \"/fusion-wc.*/\" -u'",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinor/fusion-react-components.git"
  },
  "keywords": [
    "react",
    "fusion",
    "components"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/equinor/fusion-react-components/issues"
  },
  "homepage": "https://github.com/equinor/fusion-react-components#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@equinor/eslint-config-fusion": "^2.1.4",
    "@types/react": "^17.0.2",
    "eslint": "^8.49.0",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "^8.0.3",
    "lerna": "^7.2.0",
    "lerna-update-wizard": "^1.1.2",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "react": "^17.0.2",
    "rimraf": "^5.0.1",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "./packages/**/src/**/*.{ts,tsx}": [
      "eslint --quiet --fix"
    ]
  },
  "dependencies": {
    "@equinor/fusion-react-icon": "^0.2.15",
    "@equinor/fusion-react-styles": "^0.5.9",
    "@equinor/fusion-react-tooltip": "^1.1.9"
  }
}