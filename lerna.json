{
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["main", "feat/*", "feature/*"],
      "conventionalCommits": true,
      "ignoreChanges": ["*.spec.ts", "*.md"]
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock"]
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": ["*.spec.ts", "*.md"],
      "message": "chore(release): publish"
    }
  },
  "packages": ["packages/*", "storybook"]
}
